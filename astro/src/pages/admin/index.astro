---
import Layout from '../../layouts/Layout.astro';
import { Button } from '../../components/ui/button';
import { Card, CardContent, CardHeader, CardTitle } from '../../components/ui/card';

// This will be replaced with actual admin auth middleware
const isAuthenticated = true;
---

<Layout title="Admin Dashboard - Pastebin">
  <main class="container mx-auto px-4 py-8">
    {!isAuthenticated ? (
      <div class="flex flex-col items-center justify-center min-h-[60vh]">
        <Card class="w-full max-w-md">
          <CardHeader>
            <CardTitle>Admin Login</CardTitle>
          </CardHeader>
          <CardContent>
            <form class="space-y-4">
              <div>
                <label for="username" class="block text-sm font-medium mb-1">
                  Username
                </label>
                <input
                  id="username"
                  name="username"
                  type="text"
                  required
                  class="w-full rounded-md border border-input px-3 py-2 bg-background"
                />
              </div>
              <div>
                <label for="password" class="block text-sm font-medium mb-1">
                  Password
                </label>
                <input
                  id="password"
                  name="password"
                  type="password"
                  required
                  class="w-full rounded-md border border-input px-3 py-2 bg-background"
                />
              </div>
              <Button type="submit" class="w-full">Login</Button>
            </form>
          </CardContent>
        </Card>
      </div>
    ) : (
      <div>
        <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <Card>
            <CardHeader class="pb-2">
              <CardTitle class="text-sm font-medium">Total Pastes</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-2xl font-bold">-</p>
            </CardContent>
          </Card>
          
          <Card>
            <CardHeader class="pb-2">
              <CardTitle class="text-sm font-medium">Active Pastes</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-2xl font-bold">-</p>
            </CardContent>
          </Card>
          
          <Card>
            <CardHeader class="pb-2">
              <CardTitle class="text-sm font-medium">Views Today</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-2xl font-bold">-</p>
            </CardContent>
          </Card>
          
          <Card>
            <CardHeader class="pb-2">
              <CardTitle class="text-sm font-medium">Storage Used</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-2xl font-bold">-</p>
            </CardContent>
          </Card>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <Card>
            <CardHeader>
              <CardTitle>Recent Pastes</CardTitle>
            </CardHeader>
            <CardContent>
              <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-left">
                  <thead class="text-xs uppercase bg-muted/40">
                    <tr>
                      <th scope="col" class="px-4 py-3">ID</th>
                      <th scope="col" class="px-4 py-3">Title</th>
                      <th scope="col" class="px-4 py-3">Created</th>
                      <th scope="col" class="px-4 py-3">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="border-b border-muted/20">
                      <td class="px-4 py-3 font-mono text-xs">abc123</td>
                      <td class="px-4 py-3">Example Paste</td>
                      <td class="px-4 py-3 text-xs">2025-04-12</td>
                      <td class="px-4 py-3">
                        <Button variant="ghost" size="sm">View</Button>
                        <Button variant="ghost" size="sm" class="text-destructive">Delete</Button>
                      </td>
                    </tr>
                    <!-- More rows would be populated from API -->
                  </tbody>
                </table>
              </div>
            </CardContent>
          </Card>
          
          <Card>
            <CardHeader>
              <CardTitle>System Logs</CardTitle>
            </CardHeader>
            <CardContent>
              <div class="space-y-1 bg-black/90 text-green-400 p-4 rounded-md font-mono text-xs h-64 overflow-y-auto">
                <div>[2025-04-12 00:00:00] INFO: System started</div>
                <div>[2025-04-12 00:01:23] INFO: New paste created: abc123</div>
                <div>[2025-04-12 00:05:45] WARN: Rate limit triggered for IP: 192.168.1.1</div>
                <!-- More logs would be populated from API -->
              </div>
            </CardContent>
          </Card>
        </div>
        
        <div class="mt-8">
          <Card>
            <CardHeader>
              <CardTitle>Quick Actions</CardTitle>
            </CardHeader>
            <CardContent class="flex flex-wrap gap-4">
              <Button variant="secondary">Purge Expired Pastes</Button>
              <Button variant="secondary">Clear Cache</Button>
              <Button variant="secondary">Download Analytics</Button>
              <Button variant="secondary">Edit Configuration</Button>
            </CardContent>
          </Card>
        </div>
      </div>
    )}
  </main>
</Layout>